.container.proto-new{action: ""}
  = form_for @prototype do |f|
    = f.hidden_field :user_id, value: current_user.id
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          = f.text_field :title, placeholder: "Title"
      .row
        .col-md-12
          .cover-image-upload.js-preview-image
            = f.fields_for :images, @prototype.images do |images_f|
              = images_f.file_field :file
              = images_f.hidden_field :status, value: 0
        .col-md-12
          %ul.proto-sub-list.list-group
            %li.list-group-item.col-md-4
              .image-upload
                = f.fields_for :images, @prototype.images do |images_f|
                  = images_f.file_field :file
                  = images_f.hidden_field :status, value: "1"
            %li.list-group-item.col-md-4
              .image-upload
                = f.fields_for :images, @prototype.images do |images_f|
                  = images_f.file_field :file
                  = images_f.hidden_field :status, value: "1"
            %li.list-group-item.col-md-4
              .image-upload-plus
                = f.fields_for :images, @prototype.images do |images_f|
                  = images_f.file_field :file
                  = images_f.hidden_field :status, value: "1"
                %span +
      .row.proto-description
        .col-md-12
          = f.text_field :catch_copy, placeholder: "Catch Copy"
        .col-md-12
          = f.text_area :concept, placeholder: "Concept"
        -# .col-md-12
        -#   %h4 Tag List
        -#   .row
        -#     .col-md-3
        -#       %input{type: "text", placeholder: "Web Design"}/
        -#       = f.text_field placeholder: "Web Design"
        -#     .col-md-3
        -#       = f.text_field placeholder: "UI"
        -#     .col-md-3
        -#       %input{type: "text", placeholder: "Application"}/
        -#       = f.text_field
      .row.text-center.proto-btn
        = f.submit value: "Publish", class: 'btn btn-lg btn-primary btn-block'
