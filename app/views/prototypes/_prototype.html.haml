.col-sm-4.col-md-3.proto-content
  .thumbnail
    %a{href: ""}
      = image_tag("sample.png")
      .caption
        %h3
          = link_to prototype.title, prototype_path(prototype.id)
        .proto-meta
          .proto-user
            = link_to prototype.user.name, user_path(prototype.user.id)
          .proto-posted
            = prototype.created_at.strftime("%b %d")
        %ul.proto-tag-list.list-inline
          %li
            %a{href: "#", class: "btn btn-default"} iPad
          %li
            %a{href: "#", class: "btn btn-default"} wireframe


