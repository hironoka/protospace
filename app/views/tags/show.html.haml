.jumbotron
  .container.text-center
    = image_tag("header_logo.png", alt: "PROTO TYPE - SHARE THE PROTOTYPE", height: "73px")

.filter-nav
  .container
    .row
      %ul.nav.nav-pills.col-lg-11
        %li{ role: "presentation" }
          = link_to "Popular PROTO", popular_index_path, class: "btn-index btn-success"
        %li{ role: "presentation" }
          = link_to "Newest PROTO", newest_index_path, class: "btn-index btn-info"
          %br
      = link_to "View Tags", tags_path, class: "btn btn-default col-lg-1"

.container
  .row
    .col-sm-12.proto-content
      .thumbnail.btn.btn-tag
        %h2
          = link_to "#{@tag.name}", tag_path(@tag.id)
        = link_to tag_path(@tag.id) do
          .tag-meta
            %i "#{@tag.taggings.count}" Projects
%ul
  .container.proto-list
    .row
      = render partial: 'prototypes/prototype', collection: @prototypes
