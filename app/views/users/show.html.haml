.container.user-page
  %header.user-nav
    .media
      .media-left
        = image_tag(@user.avatar, size: "64x64", class: "media-object")
      .media-body
        %h4#top-aligned-media.media-heading
          = @user.name
          %span.label.label-default.project-number
            = @user.prototypes.count
            %i Projects
        .proto-user
          %span.degree
          = @user.member
        .row
          .col-md-6
            %h4 Profile
            = @user.profile
            %p
          .col-md-6
            %h4 Works
            = @user.works
            %p
.container.proto-list
  .row
    = render partial: 'prototypes/prototype', collection: @prototypes

.text-center
  %ul.pagination
    %li
      = paginate(@prototypes)
